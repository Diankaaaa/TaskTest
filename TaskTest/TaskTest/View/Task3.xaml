<Window x:Class="TaskTest.View.Task3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTest.View"
        mc:Ignorable="d"
        Title="Task3" Height="238" Width="473" Background="#FF252526">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Button x:Name="DATA_SOURSE_FILE_2" Command="{Binding OpenFileDialog}" Content="Выберите файл источника данных" Foreground="White" Background="#FF686868" Height="37" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel>
                <Button x:Name="TARGET_FILE_2" Content="Выберите целевой файл" Foreground="White" Background="#FF686868" Height="40" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel>
                <TextBlock x:Name="THE_RESULT_OF_THE_FLOW_2" Text="Результат работы потока 2" Height="73" Foreground="White" Background="#FF686868" Margin="10" Padding="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
